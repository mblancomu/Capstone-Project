<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:contentDescription="@string/linear_desc_dialog_photo"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="@dimen/view_horizontal_margin"
        android:id="@+id/country_card"
        android:background="@color/colorPrimary"
        android:text="@string/title_position"
        android:textDirection="locale"
        android:contentDescription="@string/textview_desc_title_dialog_photo"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_thumbnail"
        android:gravity="start|center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:padding="@dimen/view_horizontal_margin"
        android:contentDescription="@string/linear_desc_dialog_photo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ib_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margins_horizontal_buttons_form"
            android:background="@null"
            android:gravity="center"
            android:contentDescription="@string/textview_desc_camera_dialog_photo"
            android:drawableTop="@drawable/ic_dialog_camera"
            android:padding="@dimen/view_horizontal_margin"
            android:text="@string/btn_camera"
            android:textColor="@color/black_trans"
            android:textDirection="locale"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/ib_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/textview_desc_gallery_dialog_photo"
            android:drawableTop="@drawable/ic_dialog_gallery"
            android:gravity="center"
            android:padding="@dimen/view_horizontal_margin"
            android:text="@string/btn_gallery"
            android:textColor="@color/black_trans"
            android:textDirection="locale"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>