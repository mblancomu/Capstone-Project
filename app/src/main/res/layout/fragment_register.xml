<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margins_vertical_global"
    android:layout_marginEnd="@dimen/margins_horizontal_global"
    android:layout_marginStart="@dimen/margins_horizontal_global"
    android:layout_marginTop="@dimen/margins_vertical_global"
    android:background="@color/colorPrimary"
    android:contentDescription="@string/linear_desc_register"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/nameField"
        style="@style/EditTextForm"
        android:contentDescription="@string/edit_text_desc_username"
        android:hint="@string/label_name"
        android:inputType="textPersonName"
        android:nextFocusDown="@+id/emailField" />

    <EditText
        android:id="@+id/emailField"
        style="@style/EditTextForm"
        android:contentDescription="@string/edit_text_desc_email"
        android:hint="@string/label_email"
        android:inputType="textEmailAddress"
        android:nextFocusDown="@+id/passwordField" />

    <EditText
        android:id="@+id/passwordField"
        style="@style/EditTextForm"
        android:contentDescription="@string/edit_text_desc_password"
        android:hint="@string/label_password"
        android:inputType="textPassword"
        android:nextFocusDown="@+id/passwordConfirmField" />

    <EditText
        android:id="@+id/passwordConfirmField"
        style="@style/EditTextForm"
        android:contentDescription="@string/edit_text_desc_confirm_password"
        android:hint="@string/label_password_confirm"
        android:inputType="textPassword"
        android:imeOptions="actionDone" />

    <Button
        android:id="@+id/registerButton"
        style="@style/ButtonsForm"
        android:contentDescription="@string/button_desc_register"
        android:ems="8"
        android:text="@string/btn_register" />

</LinearLayout>